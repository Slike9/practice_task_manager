    %th
    %th

  - @comments.each do |comment|
    %tr
      %td= comment.body
      %td= comment.author
      %td= comment.story
      %td= link_to 'Show', [@story, comment]
      %td= link_to 'Edit', edit_story_comment_path(@story, comment)
      %td= link_to 'Destroy', [@story, comment], :method => :delete, :data => { :confirm => 'Are you sure?' }

