- content_for :sidebar do
  .sidebar.well
    %h4 Filter
    = search_form_for @q do |f|
      = f.label :author_email_cont, 'Author'
      = f.text_field :author_email_cont
      = f.label :author_email_cont, 'Owner'
      = f.text_field :owner_email_cont
      = f.label :state_eq, 'State'
      = f.select :state_eq, Story.state_names, include_blank: true
      %br
      = f.submit class: 'btn'

%h1 Listing stories

%table.table
  %tr
    %th Title
    %th Description
    %th Author
    %th Owner
    %th State
    %th
    %th
    %th

  - @stories.each do |story|
    %tr
      %td= story.title
      %td= story.description
      %td= story.author
      %td= story.owner
      %td= story.human_state_name
      %td= render partial: 'events', locals: {story: story}
      %td= link_to 'Show', story
      %td= link_to 'Edit', edit_story_path(story)
      %td= link_to 'Destroy', story, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Story', new_story_path
